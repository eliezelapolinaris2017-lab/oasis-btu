<body>
<h1>Calculadora de BTU</h1>
<div class="card">
  <label>Ancho (ft)</label>
  <input type="number" id="ancho" value="12" step="0.1">

  <label>Largo (ft)</label>
  <input type="number" id="largo" value="12" step="0.1">

  <label>Alto (ft)</label>
  <input type="number" id="alto" value="8" step="0.1">

  <label>BTU por pie cuadrado</label>
  <select id="btufactor">
    <option value="25">25 BTU/ft² (estándar)</option>
    <option value="30" selected>30 BTU/ft² (Puerto Rico)</option>
    <option value="35">35 BTU/ft² (alta exigencia)</option>
  </select>

  <button onclick="calcular()">Calcular</button>

  <div class="result" id="resultado">—</div>
</div>

<script>
function calcular(){
  const ancho = parseFloat(document.getElementById('ancho').value) || 0;
  const largo = parseFloat(document.getElementById('largo').value) || 0;
  const alto  = parseFloat(document.getElementById('alto').value)  || 8;
  const factor= parseFloat(document.getElementById('btufactor').value);

  const area = ancho * largo;
  const ajusteAltura = alto / 8;
  const btu = Math.round(area * factor * ajusteAltura);

  document.getElementById('resultado').innerText =
    `Área: ${area.toFixed(1)} ft² · Altura: ${alto} ft · Estimado: ${btu} BTU/h`;
}
</script>
</body>
